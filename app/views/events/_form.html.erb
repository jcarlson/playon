<%= form_for event, :html => {:class => "form-horizontal"} do |f| %>
  <div class="row-fluid">
    <div class="span6">
      
      <div class="control-group">
        <%= f.label :name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name, :class => "input-xlarge" %>
        </div>
      </div>
          
      <div class="control-group">
        <%= f.label :scheduled_date, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :scheduled_date, :class => "input-xlarge" %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :publisher_id, :class => "control-label" %>
        <div class="controls">
          <%= f.collection_select :publisher_id, Publisher.all, :id, :name, :class => "input-xlarge" %>
        </div>
      </div>
      
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <div class="form-actions">
        <%= f.submit :class => "btn btn-primary" %>
        <%= link_to "Cancel", request.referrer %>
      </div>
    </div>
  </div>
<% end %>
