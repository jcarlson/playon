<div class="row-fluid">
  <div class="span12">
    <h1><%= @event.name %></h1>
  </div>
</div>

<hr>

<div class="row-fluid">
  <div class="span4">
    <h3>Scheduled Date</h3>
    <p><%= @event.scheduled_date.strftime "%a, %d %b %Y, %I:%M %p" %></p>
  </div>
  <div class="span4">
    <h3>Publisher</h3>
    <p><%= link_to @event.publisher.name, @event.publisher %></p>
  </div>
</div>

<hr>

<div class="row-fluid">
  <div class="span12">
    <div class="well">
      <%= link_to "Edit", edit_event_path(@event), :class => "btn btn-primary "%>
      <%= link_to "Delete", event_path(@event), :method => :delete, :class => "btn btn-danger" %>
    </div>
  </div>
</div>